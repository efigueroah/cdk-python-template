class ProjectConfig:
    """
    Clase para gestionar la configuraciÃ³n del proyecto usando hg_aws_helpers
    """
    
    def __init__(self, environment: str = "dev", config_dir: str = "config"):
        """
        Inicializar configuraciÃ³n del proyecto
        
        Args:
            environment: Ambiente (dev, staging, prod)
            config_dir: Directorio de archivos de configuraciÃ³n
        """
        self.environment = environment
        self.config_dir = Path(config_dir)
        self._config_loader = None
        self._config = None
        
        # Inicializar configuraciÃ³n
        self._load_configuration()
    
    def _load_configuration(self):
        """Cargar configuraciÃ³n usando ConfigLoader de hg_aws_helpers"""
        try:
            # Buscar archivo de configuraciÃ³n base
            base_config_file = self._find_config_file("base")
            
            if base_config_file:
                self._config_loader = ConfigLoader(
                    config_file=str(base_config_file),
                    config_dir=str(self.config_dir),
                    environment=self.environment
                )
                self._config = self._config_loader.load_config()
            else:
                # Fallback: crear configuraciÃ³n por defecto
                self._create_default_config()
                
        except Exception as e:
            print(f"âš ï¸  Error cargando configuraciÃ³n: {e}")
            print("ðŸ“ Creando configuraciÃ³n por defecto...")
            self._create_default_config()
    
    def _find_config_file(self, config_type: str = "base") -> Path:
        """
        Buscar archivo de configuraciÃ³n en mÃºltiples formatos
        
        Args:
            config_type: Tipo de configuraciÃ³n (base, proyecto especÃ­fico)
            
        Returns:
            Path al archivo de configuraciÃ³n encontrado
        """
        possible_files = [
            self.config_dir / f"{config_type}.toml",
            self.config_dir / f"{config_type}.json",
            self.config_dir / f"{config_type}.yaml",
            self.config_dir / f"{config_type}.yml",
            # Archivos especÃ­ficos del proyecto
            self.config_dir / f"{self.project_name}-{self.environment}.toml",
            self.config_dir / f"{self.project_name}-{self.environment}.json",
            self.config_dir / f"{self.project_name}-{self.environment}.yaml",
        ]
        
        for config_file in possible_files:
            if config_file.exists():
                return config_file
        
        return None
    
    def _create_default_config(self):
